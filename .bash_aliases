
# dir listing
alias l='ls -CF'
alias ll='ls -lhF'
alias la='ls -lAhF'
alias lt='ls -lthF'
alias ld='ls -ldhF'


# Directory traversal
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias h='history'

alias mkdir='mkdir -p'

alias resrc='source ~/.bashrc'

alias cls=clear

alias apt-get='sudo apt-get'

alias envgrep='env | grep'
alias psgrep='ps -elf | grep'
alias hgrep='history | grep'

# Docker
alias compose='docker-compose'
